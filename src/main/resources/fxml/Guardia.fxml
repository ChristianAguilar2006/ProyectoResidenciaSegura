<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<TabPane prefHeight="700.0" prefWidth="900.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.residencial.gui.controladores.GuardiaController">
  <tabs>
    <Tab text="Perfil">
      <content>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
          <children>
            <VBox alignment="CENTER_LEFT" layoutX="50.0" layoutY="50.0" spacing="15.0">
              <children>
                <Label text="Mi Perfil">
                  <font>
                    <Font name="System Bold" size="20.0" />
                  </font>
                </Label>
                <Label text="Nombre:" />
                <Label fx:id="lblNombre" text="-" />
                <Label text="Correo:" />
                <Label fx:id="lblCorreo" text="-" />
              </children>
            </VBox>
          </children>
        </AnchorPane>
      </content>
    </Tab>
    <Tab text="Emergencias Activas">
      <content>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
          <children>
            <VBox layoutX="20.0" layoutY="20.0" spacing="15.0">
              <children>
                <HBox spacing="10.0">
                  <children>
                    <Button mnemonicParsing="false" onAction="#refrescarEmergencias" text="Refrescar" />
                    <Button mnemonicParsing="false" onAction="#verDetalleEmergencia" text="Ver Detalle" />
                  </children>
                </HBox>
                <TableView fx:id="tablaEmergencias" prefHeight="550.0" prefWidth="860.0" />
              </children>
            </VBox>
          </children>
        </AnchorPane>
      </content>
    </Tab>
    <Tab text="Atender Emergencia">
      <content>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
          <children>
            <VBox layoutX="50.0" layoutY="50.0" spacing="15.0">
              <children>
                <Label text="Atender Emergencia">
                  <font>
                    <Font name="System Bold" size="18.0" />
                  </font>
                </Label>
                <TextField fx:id="txtIdEmergencia" promptText="ID de la Emergencia" prefWidth="400.0" />
                <TextField fx:id="txtNuevoEstado" promptText="Nuevo Estado (EN_ATENCION, RESUELTA)" prefWidth="400.0" />
                <Button mnemonicParsing="false" onAction="#atenderEmergencia" text="Actualizar Estado" />
              </children>
            </VBox>
          </children>
        </AnchorPane>
      </content>
    </Tab>
    <Tab text="Cerrar Sesión">
      <content>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
          <children>
            <VBox alignment="CENTER" layoutX="50.0" layoutY="50.0" spacing="20.0">
              <children>
                <Label text="¿Desea cerrar sesión?">
                  <font>
                    <Font name="System Bold" size="18.0" />
                  </font>
                </Label>
                <Button mnemonicParsing="false" onAction="#cerrarSesion" text="Cerrar Sesión" />
              </children>
            </VBox>
          </children>
        </AnchorPane>
      </content>
    </Tab>
  </tabs>
</TabPane>
