<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<TabPane prefHeight="700.0" prefWidth="900.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.residencial.gui.controladores.AdministradorController">
  <tabs>
    <Tab text="Perfil">
      <content>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
          <children>
            <VBox alignment="CENTER_LEFT" layoutX="50.0" layoutY="50.0" spacing="15.0">
              <children>
                <Label text="Mi Perfil">
                  <font>
                    <Font name="System Bold" size="20.0" />
                  </font>
                </Label>
                <Label text="Nombre:" />
                <Label fx:id="lblNombre" text="-" />
                <Label text="Correo:" />
                <Label fx:id="lblCorreo" text="-" />
              </children>
            </VBox>
          </children>
        </AnchorPane>
      </content>
    </Tab>
    <Tab text="Crear Usuario">
      <content>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
          <children>
            <VBox layoutX="50.0" layoutY="50.0" spacing="15.0">
              <children>
                <Label text="Nuevo Usuario">
                  <font>
                    <Font name="System Bold" size="18.0" />
                  </font>
                </Label>
                <TextField fx:id="txtNombreUsuario" promptText="Nombre" prefWidth="400.0" />
                <TextField fx:id="txtCorreoUsuario" promptText="Correo" prefWidth="400.0" />
                <TextField fx:id="txtContrasenaUsuario" promptText="Contraseña" prefWidth="400.0" />
                <TextField fx:id="txtRolUsuario" promptText="Rol (RESIDENTE, ADMINISTRADOR, GUARDIA)" prefWidth="400.0" />
                <TextField fx:id="txtDepartamentoUsuario" promptText="Departamento" prefWidth="400.0" />
                <TextField fx:id="txtBloqueUsuario" promptText="Bloque" prefWidth="400.0" />
                <Button mnemonicParsing="false" onAction="#crearUsuario" text="Crear Usuario" />
              </children>
            </VBox>
          </children>
        </AnchorPane>
      </content>
    </Tab>
    <Tab text="Crear Aviso">
      <content>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
          <children>
            <VBox layoutX="50.0" layoutY="50.0" spacing="15.0">
              <children>
                <Label text="Nuevo Aviso">
                  <font>
                    <Font name="System Bold" size="18.0" />
                  </font>
                </Label>
                <TextField fx:id="txtTituloAviso" promptText="Título" prefWidth="400.0" />
                <TextArea fx:id="txtMensajeAviso" prefHeight="150.0" prefWidth="400.0" promptText="Mensaje" />
                <TextField fx:id="txtTipoAviso" promptText="Tipo (INFORMATIVO, URGENTE, MANTENIMIENTO, EVENTO, OTRO)" prefWidth="400.0" />
                <Button mnemonicParsing="false" onAction="#crearAviso" text="Crear Aviso" />
              </children>
            </VBox>
          </children>
        </AnchorPane>
      </content>
    </Tab>
    <Tab text="Avisos">
      <content>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
          <children>
            <VBox layoutX="20.0" layoutY="20.0" spacing="10.0">
              <children>
                <HBox spacing="10.0">
                  <children>
                    <Button mnemonicParsing="false" onAction="#refrescarAvisos" text="Refrescar" />
                    <Button mnemonicParsing="false" onAction="#verDetalleAviso" text="Ver Detalle" />
                    <Button mnemonicParsing="false" onAction="#eliminarAviso" text="Eliminar" />
                  </children>
                </HBox>
                <TableView fx:id="tablaAvisos" prefHeight="550.0" prefWidth="860.0" />
              </children>
            </VBox>
          </children>
        </AnchorPane>
      </content>
    </Tab>
    <Tab text="Usuarios">
      <content>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
          <children>
            <VBox layoutX="20.0" layoutY="20.0" spacing="10.0">
              <children>
                <HBox spacing="10.0">
                  <children>
                    <Button mnemonicParsing="false" onAction="#refrescarUsuarios" text="Refrescar" />
                  </children>
                </HBox>
                <TableView fx:id="tablaUsuarios" prefHeight="550.0" prefWidth="860.0" />
              </children>
            </VBox>
          </children>
        </AnchorPane>
      </content>
    </Tab>
    <Tab text="Reportes">
      <content>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
          <children>
            <VBox alignment="CENTER" layoutX="50.0" layoutY="50.0" spacing="15.0">
              <children>
                <Label text="Reportes">
                  <font>
                    <Font name="System Bold" size="20.0" />
                  </font>
                </Label>
                <Button mnemonicParsing="false" onAction="#verReportes" text="Ver Reportes" />
              </children>
            </VBox>
          </children>
        </AnchorPane>
      </content>
    </Tab>
    <Tab text="Cerrar Sesión">
      <content>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
          <children>
            <VBox alignment="CENTER" layoutX="50.0" layoutY="50.0" spacing="20.0">
              <children>
                <Label text="¿Desea cerrar sesión?">
                  <font>
                    <Font name="System Bold" size="18.0" />
                  </font>
                </Label>
                <Button mnemonicParsing="false" onAction="#cerrarSesion" text="Cerrar Sesión" />
              </children>
            </VBox>
          </children>
        </AnchorPane>
      </content>
    </Tab>
  </tabs>
</TabPane>
